# ===========================================
# Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values.
# Make sure .env is in your .gitignore file to prevent committing secrets.

# ===== Required Configuration =====

# OpenAI API Key - Required for AI functionality
OPENAI_API_KEY="your_openai_api_key_here"

# Database Configuration
# Format: postgresql+psycopg2://user:password@host:port/dbname
DATABASE_URL="postgresql+psycopg2://user:password@localhost:5432/your_database"

# ===== Authentication =====

# JWT Secret Key - Generate a strong secret key for JWT token signing
SECRET_KEY="your-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== Twilio Configuration (Optional) =====
# Required for SMS/voice features
# TWILIO_ACCOUNT_SID="your_twilio_account_sid"
# TWILIO_AUTH_TOKEN="your_twilio_auth_token"
# TWILIO_PHONE_NUMBER="+1234567890"

# ===== Application Settings =====

# Debug mode (True/False)
# WARNING: Never enable in production
DEBUG=False

# Allowed CORS origins (comma-separated)
# Example: "http://localhost:3000,http://example.com"
CORS_ORIGINS="http://localhost:3000"

# ===== Logging =====
LOG_LEVEL="INFO"
# LOG_FILE="logs/app.log"  # Uncomment to enable file logging
